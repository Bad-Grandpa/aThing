@page
@model Garage.Pages.CarList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Cars in Garage</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Add New Car</a>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Add(Upsert) New Car</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Cars.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Cars.FirstOrDefault().Brand_Name"></label>
                        </th>
                        <th>
                            <label asp-for="Cars.FirstOrDefault().Model_Name"></label>
                        </th>
                        <th>
                            <label asp-for="Cars.FirstOrDefault().Plate_Number"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Cars)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Brand_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Model_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Plate_Number)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No cars available.</p>
            }
        </form>

    </div>



    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Brand_Name</th>
                    <th>Model_Name</th>
                    <th>Plate_Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/carList.js"></script>
}
