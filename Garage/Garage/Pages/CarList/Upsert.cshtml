@page
@model Garage.Pages.CarList.UpsertModel


<br />
<h2 class="text-info">@(Model.Car.Id!=0? "Edit": "Create")</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Car.Id != 0)
        {
            @*By moc edytowac rekordy potrzebne bedzie wczytanie id aby je zwrocic*@
            <input type="hidden" asp-for="Car.Id" />

        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Brand_Name">Brand</label>
                <label style="color:red;">*</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Brand_Name" class="form-control" />
            </div>
            <span asp-validation-for="Car.Brand_Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Model_Name">Model</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Model_Name" class="form-control" />
            </div>
            <span asp-validation-for="Car.Model_Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Plate_Number">Plate Number</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Plate_Number" class="form-control" />
            </div>
            <span asp-validation-for="Car.Plate_Number" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Car.Id!=0? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

