@page
@model Garage.Pages.CarList.CreateModel


<br />
<h2 class="text-info">Add New Car</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Brand_Name">Brand</label>
                <label style="color:red;">*</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Brand_Name" class="form-control" />
            </div>
            <span asp-validation-for="Car.Brand_Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Model_Name">Model</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Model_Name" class="form-control" />
            </div>
            <span asp-validation-for="Car.Model_Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Car.Plate_Number">Plate Number</label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Plate_Number" class="form-control" />
            </div>
            <span asp-validation-for="Car.Plate_Number" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Garage</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
